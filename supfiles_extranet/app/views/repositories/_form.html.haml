= form_for @repository do |f|
  - if @repository.errors.any?
    #error_explanation
      %h2= "#{pluralize(@repository.errors.count, "error")} prohibited this repository from being saved:"
      %ul
        - @repository.errors.full_messages.each do |message|
          %li= message

  .field{style: params[:controller].eql?('repositories') ? 'display:none;' : ''}
    = f.select :repository, Repository.all.map { |r| [r.name, r.id] }
  .field
    = f.text_field :name
    = f.submit 'Enregisrter'
