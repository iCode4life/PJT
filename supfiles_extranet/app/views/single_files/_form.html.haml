= form_for @single_file do |f|
  - if @single_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@single_file.errors.count, "error")} prohibited this single_file from being saved:"
      %ul
        - @single_file.errors.full_messages.each do |message|
          %li= message


  .field{style: params[:controller].eql?('repositories') ? 'display:none;' : ''}
    = f.select :repository_id, Repository.all.map { |r| [r.name, r.id] }
  .field
    = f.text_field :name
    = f.file_field :file_file
    = f.submit 'Envoyer'
